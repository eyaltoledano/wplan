<h1>Listing tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Deadline</th>
      <th>Cost</th>
      <th>Paidtodate</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.cost %></td>
        <td><%= task.paidtodate %></td>
        <td><%= link_to 'Show', task, { :class => "btn btn-default" } %></td>
        <td><%= link_to 'Edit', edit_task_path(task), { :class => "btn btn-default" } %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path,  { :class => "btn btn-default" } %>
