<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</p>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-9"> 
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :deadline, class: "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :deadline, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :cost, class: "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :cost, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :paidtodate, "Paid to Date", class: "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :paidtodate, class: "form-control" %>
      </div>
    </div>

</div>

  <div class="panel form-group col-sm-offset-3 col-sm-6">
    <div class="panel checkbox">
      <%= f.label :is_complete, "Is this task complete?" %>
      <%= f.check_box :is_complete %>
    </div>
    <hr>
    <%= f.submit "Save this task", class: "btn btn-success btn-lg btn-block"  %>
  </div>

<% end %>
